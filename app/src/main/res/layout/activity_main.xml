<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".Login"
    >
    <RelativeLayout
        android:background="@drawable/laybgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_margin="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                android:src="@drawable/usericon" />

            <LinearLayout
                android:id="@+id/formulaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Matricule:"
                        android:textStyle="bold"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed"
                        android:background="@drawable/bgn"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:maxLength="20"
                        android:singleLine="true"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mot de passe:"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed"
                        android:background="@drawable/bgn"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:maxLength="20"
                        android:singleLine="true"

                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/formulaire"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bgn"
                android:fontFamily="sans-serif-condensed"
                android:text="conecter"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:layout_centerInParent="true"
                android:layout_below="@+id/btn"
                android:text="Récupérer mon mot de passe"
                android:contextClickable="true"
                android:fontFamily="sans-serif-condensed" />
            <TextView
                android:id="@+id/rzlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="@color/red"
                android:layout_below="@+id/forgotpass"/>


        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>