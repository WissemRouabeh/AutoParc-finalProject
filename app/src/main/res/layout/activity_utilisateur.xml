<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insertdata.utilisateur">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/formulaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/laybgn"
            android:padding="8dp">

            <ImageView
                android:id="@+id/addimg"
                android:layout_width="66dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person_add_black_24dp"
                android:tint="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addimg"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="Matricule:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/matricule"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bgn"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLength="10"
                    android:inputType="number"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="Nom:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/nom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bgn"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLength="30"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="Prenom:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/prenom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bgn"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLength="30"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="N° cin"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/cin"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bgn"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="Date de recrutement:"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/mdate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bgn"
                    android:drawableRight="@drawable/ic_list_black_24dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true" />

                <Spinner
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tous"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Privilèges"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:id="@+id/pr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/C"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="Chauffeurs" />

                            <LinearLayout
                                android:id="@+id/cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RadioGroup
                                    android:id="@+id/radioc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/cr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Suivre" />

                                    <RadioButton
                                        android:id="@+id/ca"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Gérer" />
                                </RadioGroup>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/V"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="Voitures" />

                            <LinearLayout
                                android:id="@+id/vs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioGroup
                                    android:id="@+id/radiov"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/vr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Read-Only" />

                                    <RadioButton
                                        android:id="@+id/va"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="All" />
                                </RadioGroup>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/M"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="Missions"
                                tools:layout_editor_absoluteX="60dp"
                                tools:layout_editor_absoluteY="103dp" />

                            <LinearLayout
                                android:id="@+id/ms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioGroup
                                    android:id="@+id/radiom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/mr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Read-Only" />

                                    <RadioButton
                                        android:id="@+id/ma"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="All" />
                                </RadioGroup>
                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/btnajout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/formulaire"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bgn"
            android:fontFamily="sans-serif-condensed"
            android:text="Ajouter"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/resultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnajout"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>
</RelativeLayout>

