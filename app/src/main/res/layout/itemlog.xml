<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    android:layout_margin="3dp"
    android:background="@drawable/itemlay"
    android:padding="3dp">

    <TextView
        android:id="@+id/id_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="id_user"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/npuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/type"
        android:layout_toRightOf="@+id/id_user"
        android:padding="5dp"
        android:text="nom et prenom user"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="type"
        android:textColor="@color/red"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="action"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_user"
        android:layout_above="@+id/action"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="7dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/don1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:text="donnee1"
            android:textSize="15sp"
            android:textStyle="italic" />





    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/action"
        android:padding="3dp"
        android:paddingStart="5dp"
        android:text="2010-10-20 20:20:20"
        android:textSize="17sp"
        android:textStyle="italic" />


</RelativeLayout>