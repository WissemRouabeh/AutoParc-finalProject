<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_centerInParent="true"
    android:background="@drawable/popup_stroke">

    <TextView
        android:drawableLeft="@drawable/ic_priority_high_black_24dp"
        android:id="@+id/titre"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingBottom="5dp"
        android:paddingStart="7dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:id="@id/vue"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/titre"
        android:layout_marginHorizontal="15dp"
        android:tint="@color/darkgrey" />


    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vue"
        android:paddingStart="10dp"
        android:text="Êtes-vous sûr de vouloir effectuer la modification?"
        android:textSize="22dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg1"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="italic|bold" />

    <Button
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/msg"
        android:background="@drawable/laybgn"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="Oui"
        android:id="@+id/oui"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg"
        android:background="@drawable/laybgn"
        android:text="Non"
        android:id="@+id/non"
        android:layout_toLeftOf="@+id/oui"
        />



</RelativeLayout>