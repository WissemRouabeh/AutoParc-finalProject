<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Changeinfos">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Nom:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nom"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Prenom:"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="prenom"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="N° cin:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cin"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:text="Date de récrutement:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date de recrutement"
            android:clickable="true"
            android:textSize="21sp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/annul"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/btn_appliquer_stroke"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/appliq"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Appliquer"
            android:textColor="@color/white"
            android:background="@drawable/btn_bgn"/>

    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="resultat"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"
        android:visibility="gone"
        android:textStyle="bold" />
</RelativeLayout>