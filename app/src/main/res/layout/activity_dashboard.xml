<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:clickable="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deconexion"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="14sp"/>
                <ImageView
                    android:id="@+id/exit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/exit"
                    android:tint="@color/white"
                    android:paddingRight="5dp"/>

            </LinearLayout>
        </RelativeLayout>
    </Toolbar>
    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="@color/colorspice"
        android:text="Bienvenue @wissem!"
        android:layout_marginStart="2dp"
        android:textStyle="bold|italic"
        android:layout_below="@id/toolbar"
        />
    <ScrollView
        android:layout_below="@id/welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <GridLayout
               android:id="@+id/grid"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:columnCount="2"
               android:layout_centerHorizontal="true"
               android:rowOrderPreserved="true">

               <android.support.v7.widget.CardView
                   android:id="@+id/missions"
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:layout_gravity="center"
                   android:layout_margin="15dp"
                   android:clickable="true"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:src="@drawable/ic_assignment_black_24dp"
                           android:tint="@color/colorPrimary" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Missions"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           tools:fontFamily="sans-serif-smallcaps" />

                       <View
                           android:layout_width="100dp"
                           android:layout_height="1.5dp"
                           android:background="@color/grey" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="Gérer les missions"
                           android:textSize="10sp"
                           android:textStyle="italic" />


                   </LinearLayout>

               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:id="@+id/chauffeurs"
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:layout_gravity="center"
                   android:layout_margin="15dp"
                   android:clickable="true"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:src="@drawable/driver"
                           android:tint="@color/colorPrimary" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Chauffeurs"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           tools:fontFamily="sans-serif-smallcaps" />

                       <View
                           android:layout_width="100dp"
                           android:layout_height="1.5dp"
                           android:background="@color/grey" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="Gérer les chauffeurs"
                           android:textSize="10sp"
                           android:textStyle="italic" />


                   </LinearLayout>

               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:id="@+id/voitures"
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:layout_gravity="center"
                   android:layout_margin="15dp"
                   android:clickable="true"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:src="@drawable/a006"
                           android:tint="@color/colorPrimary" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Voitures"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           tools:fontFamily="sans-serif-smallcaps" />

                       <View
                           android:layout_width="100dp"
                           android:layout_height="1.5dp"
                           android:background="@color/grey" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="Gérer les voitures"
                           android:textSize="10sp"
                           android:textStyle="italic" />

                   </LinearLayout>

               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:id="@+id/utilisateurs"
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:layout_gravity="center"
                   android:layout_margin="15dp"
                   android:clickable="true"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:src="@drawable/usericon"
                           android:tint="@color/colorPrimary" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Utilisateurs"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           tools:fontFamily="sans-serif-smallcaps" />
                       <View
                           android:layout_width="100dp"
                           android:layout_height="1.5dp"
                           android:background="@color/grey" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="Gérer les utilisateurs"
                           android:textSize="10sp"
                           android:textStyle="italic" />

                   </LinearLayout>

               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:id="@+id/Profile"
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:layout_gravity="center"
                   android:layout_margin="15dp"
                   android:clickable="true"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="10dp"
                   android:visibility="gone">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:src="@drawable/usericon"
                           android:tint="@color/colorPrimary" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Compte"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           tools:fontFamily="sans-serif-smallcaps" />
                       <View
                           android:layout_width="100dp"
                           android:layout_height="1.5dp"
                           android:background="@color/grey" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="Gérer votre compte"
                           android:textSize="10sp"
                           android:textStyle="italic" />

                   </LinearLayout>

               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:id="@+id/logs"
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:layout_gravity="center"
                   android:layout_margin="15dp"
                   android:clickable="true"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:src="@drawable/logsicon"
                           android:tint="@color/colorPrimary" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Journaux"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           tools:fontFamily="sans-serif-smallcaps" />

                       <View
                           android:layout_width="100dp"
                           android:layout_height="1.5dp"
                           android:background="@color/grey" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="consulter les journaux "
                           android:textSize="10sp"
                           android:textStyle="italic" />


                   </LinearLayout>

               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:id="@+id/statistic"
                   android:layout_width="140dp"
                   android:layout_height="140dp"
                   android:layout_gravity="center"
                   android:layout_margin="15dp"
                   android:clickable="true"
                   app:cardCornerRadius="10dp"
                   app:cardElevation="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:tint="@color/colorPrimary" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Statistiques"
                           android:textSize="20sp"
                           android:textStyle="bold"
                           tools:fontFamily="sans-serif-smallcaps" />

                       <View
                           android:layout_width="100dp"
                           android:layout_height="1.5dp"
                           android:background="@color/grey" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="consulter les statistique"
                           android:textSize="10sp"
                           android:textStyle="italic" />


                   </LinearLayout>

               </android.support.v7.widget.CardView>


           </GridLayout>
       </RelativeLayout>


    </ScrollView>

</RelativeLayout>